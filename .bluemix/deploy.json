{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "le title",
    "description": "le description",
    "longDescription": "A longer description",
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The bluemix region",
            "type": "string"
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string"
        },
        "prod-space": {
            "description": "The bluemix space. Must have an odd number of characters in its name ;)",
            "type": "string",
            "pattern": "^.(?:..)*$"
        },
        "prod-app-name": {
            "description": "App name, must have odd # of characters",
            "type": "string",
            "maxLength": 63,
            "invalidMessage": "The maximum length of the app name is 63 characters."
        }
    },
    "required": [
        "prod-region",
        "prod-organization",
        "prod-space",
        "prod-app-name"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "App name",
            "key": "prod-app-name"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Region"
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "label",
                    "title": "Stage"
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        }
    ]
}
